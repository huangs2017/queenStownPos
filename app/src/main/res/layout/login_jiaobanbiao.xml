<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#92aaa0"
    android:gravity="center" >

<TextView  
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content" 
    android:textSize="26sp"
    android:textColor="#000"
    android:text="交班表" />  
    
<GridLayout
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:rowCount="13"
    android:columnCount="2"
    android:layout_gravity="center_horizontal" >  
　　    <TextView  
   		android:id="@+id/textview_eighteen_cashiernum"   
        style="@style/login_jiaobanbiao_style"
        android:text="交班收银员编号" />   
　　    <TextView
		android:id="@+id/textview_eighteen_cashiername"  
        style="@style/login_jiaobanbiao_style"
        android:text="交班收银员姓名" />    
　　    <TextView    
        style="@style/login_jiaobanbiao_style"
        android:text="现金:" />
　　    <TextView  
		android:id="@+id/textview_eighteencash"  
        style="@style/login_jiaobanbiao_style"
        android:text="0" />
　　    <TextView  
        style="@style/login_jiaobanbiao_style"
        android:text="刷卡:" />   
　　    <TextView  
        style="@style/login_jiaobanbiao_style"
        android:text="0" />   
　　    <TextView  
        style="@style/login_jiaobanbiao_style"
        android:text="会员:" />
　　    <TextView  
        style="@style/login_jiaobanbiao_style" 
        android:text="0" />
　　   <TextView  
        style="@style/login_jiaobanbiao_style"
        android:text="其它:" />
　　    <TextView  
        style="@style/login_jiaobanbiao_style" 
        android:text="0" />                 
</GridLayout>  
    
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:layout_margin="20dp"
    android:orientation="horizontal" >
    <Button  
        android:id="@+id/btn_queren" 
        android:layout_width="80dp"  
        android:layout_height="50dp" 
        android:layout_marginRight="30dp"
        android:text="确认交班"/>  
    <Button  
        android:id="@+id/btn_quxiao" 
        android:layout_width="80dp"  
        android:layout_height="50dp" 
        android:layout_marginLeft="30dp"
        android:text="取消"/>  
</LinearLayout>
    
</LinearLayout>
